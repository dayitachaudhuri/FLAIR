---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="All Publications - FLAIR Lab">
    <Header />

    <div class="mt-20 py-12">
        <div class="container mx-auto px-4">
            <h2 class="text-4xl font-bold text-gray-800 mb-8">
                All Publications
            </h2>
            <div id="all-publications-list"></div>
        </div>
    </div>

    <Footer />

    <script is:inline src="/assets/js/publications.js"></script>
    <script is:inline>
        document.addEventListener("DOMContentLoaded", function () {
            renderAllPublications("all-publications-list");
        });
    </script>
</Layout>
