---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import TeamMembers from "../components/TeamMembers.astro";
import membersData from "../data/members.json";
---

<Layout title="FLAIR Lab - IISc Bangalore">
    <Header />

    <!-- Page Header -->
    <header
        class="mt-16 min-h-screen h-screen flex items-center bg-white border-b border-gray-300 transition-all duration-300"
        id="home"
    >
        <div class="container mx-auto px-4">
            <div class="flex flex-col justify-center items-center">
                <div class="w-full text-center mb-8">
                    <h6 class="text-gray-600 text-lg mb-2">Welcome to the</h6>
                    <h6
                        class="text-4xl md:text-5xl font-bold text-gray-800 mb-3"
                    >
                        FLAIR Lab
                    </h6>
                    <p class="text-gray-600 text-lg mb-2">
                        Research group in Natural Language Processing (NLP)
                    </p>
                    <p class="text-gray-500">
                        Indian Institute of Science, Bangalore
                    </p>
                </div>
                <div class="w-full flex justify-center items-center">
                    <div
                        class="slider-container relative w-full max-w-4xl mx-auto"
                    >
                        <div
                            class="aspect-[16/10] md:aspect-[16/9] relative overflow-hidden rounded-lg shadow-2xl bg-white p-4"
                        >
                            <div class="slide active absolute inset-0 p-4">
                                <img
                                    src="/assets/imgs/slider/gallery-1.jpeg"
                                    alt="Research Image 1"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>
                            <div class="slide absolute inset-0 p-4 opacity-0">
                                <img
                                    src="/assets/imgs/slider/gallery-2.jpeg"
                                    alt="Research Image 2"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>
                            <div class="slide absolute inset-0 p-4 opacity-0">
                                <img
                                    src="/assets/imgs/slider/gallery-3.jpeg"
                                    alt="Research Image 3"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>
                            <div class="slide absolute inset-0 p-4 opacity-0">
                                <img
                                    src="/assets/imgs/slider/gallery-4.jpeg"
                                    alt="Research Image 4"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>
                            <div class="slide absolute inset-0 p-4 opacity-0">
                                <img
                                    src="/assets/imgs/slider/gallery-5.jpeg"
                                    alt="Research Image 5"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>
                            <div class="slide absolute inset-0 p-4 opacity-0">
                                <img
                                    src="/assets/imgs/slider/gallery-6.jpeg"
                                    alt="Research Image 6"
                                    class="w-full h-full object-cover rounded-md"
                                />
                            </div>

                            <!-- Navigation Arrows -->
                            <button
                                class="absolute top-1/2 -translate-y-1/2 left-4 bg-white/70 hover:bg-white/90 border-none w-12 h-12 rounded-full cursor-pointer z-10 flex items-center justify-center text-xl text-blue-600 transition-all duration-300 shadow-lg hover:scale-110"
                                onclick="changeSlide(-1)"
                                aria-label="Previous slide"
                            >
                                ←
                            </button>
                            <button
                                class="absolute top-1/2 -translate-y-1/2 right-4 bg-white/70 hover:bg-white/90 border-none w-12 h-12 rounded-full cursor-pointer z-10 flex items-center justify-center text-xl text-blue-600 transition-all duration-300 shadow-lg hover:scale-110"
                                onclick="changeSlide(1)"
                                aria-label="Next slide"
                            >
                                →
                            </button>

                            <!-- Dots Navigation -->
                            <div
                                class="absolute bottom-6 left-1/2 -translate-x-1/2 flex gap-2 z-10"
                            >
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white cursor-pointer transition-all duration-300 shadow-md"
                                    onclick="currentSlide(1)"></span>
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white/50 cursor-pointer transition-all duration-300 shadow-md hover:bg-white hover:scale-125"
                                    onclick="currentSlide(2)"></span>
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white/50 cursor-pointer transition-all duration-300 shadow-md hover:bg-white hover:scale-125"
                                    onclick="currentSlide(3)"></span>
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white/50 cursor-pointer transition-all duration-300 shadow-md hover:bg-white hover:scale-125"
                                    onclick="currentSlide(4)"></span>
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white/50 cursor-pointer transition-all duration-300 shadow-md hover:bg-white hover:scale-125"
                                    onclick="currentSlide(5)"></span>
                                <span
                                    class="dot w-3 h-3 rounded-full bg-white/50 cursor-pointer transition-all duration-300 shadow-md hover:bg-white hover:scale-125"
                                    onclick="currentSlide(6)"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Research section -->
    <section id="about" class="py-20 bg-gray-50 transition-colors duration-300">
        <div class="container mx-auto px-4 text-center">
            <h6 class="text-gray-600 text-sm uppercase tracking-wide mb-2">
                About Us
            </h6>
            <h6 class="text-3xl font-bold text-gray-800 mb-4">
                Research Areas
            </h6>
            <p class="mb-12 pb-4 max-w-4xl mx-auto text-gray-700">
                Our group broadly works in the areas of Natural Language
                Processing (NLP) and Machine Learning (ML). Our research focuses
                on developing robust, fair, and interpretable AI systems with
                applications in Natural Language Processing. From the outset,
                the lab is envisioned to be diverse, transparent, friendly and
                highly collaborative.
            </p>

            <div class="grid grid-cols-1 lg:grid-cols-3 gap-6 mb-12">
                <div class="mb-4">
                    <div
                        class="bg-white border border-gray-300 rounded-lg shadow-md h-full transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
                    >
                        <div class="p-6 flex flex-col h-full">
                            <h5
                                class="text-xl font-semibold text-gray-800 mb-3"
                            >
                                Robustness in NLP
                            </h5>
                            <div class="text-left flex-grow">
                                <p class="mb-2 text-sm text-gray-700">
                                    Lorem ipsum dolor sit amet, consectetur
                                    adipiscing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua.
                                    Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip
                                    ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <div
                        class="bg-white border border-gray-300 rounded-lg shadow-md h-full transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
                    >
                        <div class="p-6 flex flex-col h-full">
                            <h5
                                class="text-xl font-semibold text-gray-800 mb-3"
                            >
                                Fairness in ML
                            </h5>
                            <div class="text-left flex-grow">
                                <p class="mb-2 text-sm text-gray-700">
                                    Lorem ipsum dolor sit amet, consectetur
                                    adipiscing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua.
                                    Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip
                                    ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <div
                        class="bg-white border border-gray-300 rounded-lg shadow-md h-full transition-all duration-300 hover:-translate-y-1 hover:shadow-xl"
                    >
                        <div class="p-6 flex flex-col h-full">
                            <h5
                                class="text-xl font-semibold text-gray-800 mb-3"
                            >
                                Interpretability
                            </h5>
                            <div class="text-left flex-grow">
                                <p class="mb-2 text-sm text-gray-700">
                                    Lorem ipsum dolor sit amet, consectetur
                                    adipiscing elit, sed do eiusmod tempor
                                    incididunt ut labore et dolore magna aliqua.
                                    Ut enim ad minim veniam, quis nostrud
                                    exercitation ullamco laboris nisi ut aliquip
                                    ex ea commodo consequat.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Sponsors Slider Section -->
            <div class="mt-12">
                <h6 class="text-3xl font-bold text-gray-800 mb-6">
                    Our Sponsors
                </h6>
                <div
                    id="sponsors-slider"
                    class="max-w-[1000px] mx-auto relative min-h-[180px]"
                >
                    <button
                        class="sponsors-arrow prev absolute top-1/2 -translate-y-1/2 left-0 bg-white/95 border-none w-9 h-9 rounded-full cursor-pointer z-[2] flex items-center justify-center text-lg text-blue-600 shadow-md transition-colors duration-200 hover:bg-gray-50"
                        onclick="changeSponsorSlide(-1)"
                    >
                        <i class="ti-angle-left">←</i>
                    </button>
                    <div class="sponsors-slides-outer overflow-hidden w-full">
                        <div
                            class="sponsors-slides-wrapper w-full min-h-[150px] flex items-center justify-center"
                        >
                        </div>
                    </div>
                    <button
                        class="sponsors-arrow next absolute top-1/2 -translate-y-1/2 right-0 bg-white/95 border-none w-9 h-9 rounded-full cursor-pointer z-[2] flex items-center justify-center text-lg text-blue-600 shadow-md transition-colors duration-200 hover:bg-gray-50"
                        onclick="changeSponsorSlide(1)"
                    >
                        <i class="ti-angle-right">→</i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- People section -->
    <section id="people" class="py-20 bg-white transition-colors duration-300">
        <div class="container mx-auto px-4 text-center">
            <h6 class="text-gray-600 text-sm uppercase tracking-wide mb-2">
                Our Team
            </h6>
            <h6 class="text-3xl font-bold text-gray-800 mb-12">
                Meet the FLAIR Lab community
            </h6>

            <!-- Principal Investigator -->
            <div class="mb-12">
                <div class="flex justify-center">
                    <div class="w-full md:w-1/2 lg:w-1/3">
                        <div
                            class="bg-white border border-gray-300 rounded-lg shadow-md"
                        >
                            <div class="p-6 text-center">
                                <img
                                    src="/assets/imgs/team/danish.jpg"
                                    alt="Dr. Danish Pruthi"
                                    class="w-[150px] h-[150px] object-cover rounded-full mx-auto mb-4"
                                />
                                <h5 class="text-lg font-semibold text-gray-800">
                                    Dr. Danish Pruthi
                                </h5>
                                <p class="text-gray-600 text-sm mb-1">
                                    Assistant Professor
                                </p>
                                <p class="text-sm text-gray-700 mb-3">
                                    Department of Computational and Data
                                    Sciences, IISc
                                </p>
                                <div class="flex justify-center gap-3">
                                    <a
                                        href="https://danishpruthi.com"
                                        class="text-blue-600 hover:text-blue-800 transition-colors"
                                        ><i class="ti-world"></i></a
                                    >
                                    <a
                                        href="https://scholar.google.com/citations?user=XXXXXX"
                                        class="text-blue-600 hover:text-blue-800 transition-colors"
                                        ><i class="ti-book"></i></a
                                    >
                                    <a
                                        href="https://twitter.com/danishpruthi"
                                        class="text-blue-600 hover:text-blue-800 transition-colors"
                                        ><i class="ti-twitter"></i></a
                                    >
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Members - Using TeamMembers island component -->
            <div class="mb-12">
                <TeamMembers members={membersData.students} />
            </div>

            <!-- Alumni -->
            <div class="mb-12">
                <h5 class="text-left text-2xl font-semibold text-gray-800 mb-6">
                    Alumni
                </h5>
                <div class="alumni-list" id="alumni-dropdowns"></div>
            </div>
        </div>
    </section>

    <!-- Publications section -->
    <section
        id="publications"
        class="py-20 bg-gray-50 transition-colors duration-300"
    >
        <div class="container mx-auto px-4 text-center">
            <h6 class="text-gray-600 text-sm uppercase tracking-wide mb-2">
                Publications
            </h6>
            <h6 class="text-3xl font-bold text-gray-800 mb-12">
                Recent Publications & Preprints
            </h6>

            <div class="max-w-6xl mx-auto">
                <div
                    class="bg-white border border-gray-200 rounded-lg shadow-sm"
                >
                    <div class="p-8 text-left">
                        <h5 class="text-2xl font-bold text-gray-800 mb-6">
                            Selected Publications
                        </h5>
                        <div class="publication-list" id="publications-list">
                        </div>

                        <div
                            class="text-center mt-8 pt-6 border-t border-gray-200"
                        >
                            <a
                                href="/publications"
                                class="inline-block bg-blue-600 text-white px-8 py-3 rounded-lg hover:bg-blue-700 transition-colors duration-300 font-medium shadow-sm hover:shadow-md"
                            >
                                View All Publications
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- News section -->
    <section id="news" class="py-20 bg-white transition-colors duration-300">
        <div class="container mx-auto px-4 text-center">
            <h6 class="text-gray-600 text-sm uppercase tracking-wide mb-2">
                News
            </h6>
            <h6 class="text-3xl font-bold text-gray-800 mb-12">
                Latest Updates
            </h6>
            <div class="max-w-4xl mx-auto">
                <div
                    class="bg-white border border-gray-300 rounded-lg shadow-md"
                >
                    <div class="p-6 text-left">
                        <div id="news-list"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact section -->
    <section
        id="contact"
        class="py-20 bg-gray-50 transition-colors duration-300"
    >
        <div class="container mx-auto px-4 text-center">
            <h6 class="text-gray-600 text-sm uppercase tracking-wide mb-2">
                Contact
            </h6>
            <h6 class="text-3xl font-bold text-gray-800 mb-4">Get in Touch</h6>
            <p class="mb-12 pb-4 text-gray-700">
                Interested in joining our lab or collaborating with us? We'd
                love to hear from you!
            </p>

            <div
                class="grid grid-cols-1 md:grid-cols-2 gap-6 max-w-5xl mx-auto"
            >
                <div class="mb-4">
                    <div
                        class="bg-white border border-gray-300 rounded-lg shadow-md h-full"
                    >
                        <div class="p-6">
                            <h5
                                class="text-xl font-semibold text-gray-800 mb-4"
                            >
                                Join Our Lab
                            </h5>
                            <p class="text-left text-gray-700 mb-3">
                                We are always looking for motivated students and
                                researchers. If you're interested in:
                            </p>
                            <ul
                                class="text-left list-disc pl-5 mb-4 text-gray-700"
                            >
                                <li>PhD positions</li>
                                <li>MTech Research</li>
                                <li>Research internships</li>
                            </ul>
                            <p class="text-left text-gray-700">
                                Please send your CV and research interests
                                through <a
                                    href="mailto:danish@iisc.ac.in"
                                    class="text-blue-600 hover:text-blue-800 transition-colors"
                                    >email.</a
                                >
                            </p>
                        </div>
                    </div>
                </div>

                <div class="mb-4">
                    <div
                        class="bg-white border border-gray-300 rounded-lg shadow-md h-full"
                    >
                        <div class="p-6">
                            <h5
                                class="text-xl font-semibold text-gray-800 mb-4"
                            >
                                Location & Contact
                            </h5>
                            <div class="text-left text-gray-700">
                                <p class="mb-4">
                                    <strong>Address:</strong><br />
                                    Department of Computational and Data Sciences<br
                                    />
                                    Indian Institute of Science<br />
                                    Bangalore 560012, India
                                </p>

                                <p class="mb-4">
                                    <strong>Email:</strong><br />
                                    <a
                                        href="mailto:danish@iisc.ac.in"
                                        class="text-blue-600 hover:text-blue-800 transition-colors"
                                        >danish@iisc.ac.in</a
                                    >
                                </p>

                                <p><strong>Office:</strong> Room 401, CDS</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <Footer />

    <!-- Client-side scripts -->
    <script is:inline src="/assets/js/slider.js"></script>
    <script is:inline src="/assets/js/publications.js"></script>
    <script is:inline src="/assets/js/news.js"></script>
    <script is:inline src="/assets/js/alumni.js"></script>
    <script is:inline src="/assets/js/sponsors.js"></script>

    <style>
        /* Slider animations */
        .slide {
            transition: opacity 0.5s ease-in-out;
        }

        .slide.active {
            opacity: 1;
            z-index: 1;
        }

        /* Sponsors slider transitions */
        .sponsors-slides-wrapper.slide-left,
        .sponsors-slides-wrapper.slide-right {
            transition: transform 0.5s cubic-bezier(0.77, 0, 0.18, 1);
        }

        .sponsors-slides-wrapper.slide-left {
            transform: translateX(-60px);
        }

        .sponsors-slides-wrapper.slide-right {
            transform: translateX(60px);
        }
    </style>
</Layout>
