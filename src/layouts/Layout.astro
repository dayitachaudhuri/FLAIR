---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "FLAIR Lab at Indian Institute of Science, Bangalore. Research in Natural Language Processing, Machine Learning, and AI Safety.",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body data-spy="scroll" data-target=".navbar" data-offset="40" id="home">
    <slot />

    <!-- Add Bootstrap JS dependencies -->
    <script is:inline src="https://code.jquery.com/jquery-3.6.0.min.js"
    ></script>
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"
    ></script>

    <!-- steller js -->
    <script is:inline src="/assets/js/steller.js"></script>
  </body>
</html>
