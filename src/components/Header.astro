---
// Navigation component
---

<!-- Page navigation -->
<nav
    class="fixed top-0 left-0 right-0 z-50 bg-white transition-colors duration-300"
>
    <div class="container mx-auto px-4">
        <div class="flex items-center justify-between py-3">
            <a href="#" class="flex items-center">
                <img
                    src="/assets/imgs/logo2.png"
                    alt="FLAIR Lab"
                    class="h-[50px] w-auto transition-all duration-300"
                />
            </a>

            <button
                class="lg:hidden p-2 text-gray-700 hover:text-gray-900 focus:outline-none"
                type="button"
                onclick="document.getElementById('navbarMenu').classList.toggle('hidden')"
                aria-label="Toggle navigation"
            >
                <svg
                    class="w-6 h-6"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>

            <div
                id="navbarMenu"
                class="hidden lg:flex lg:items-center absolute lg:relative top-full left-0 right-0 lg:top-auto bg-white lg:bg-transparent w-full lg:w-auto shadow-lg lg:shadow-none"
            >
                <ul
                    class="flex flex-col lg:flex-row lg:items-center lg:ml-auto space-y-2 lg:space-y-0 lg:space-x-6 p-4 lg:p-0"
                >
                    <li>
                        <a
                            href="/#home"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >Home</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#about"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >About</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#people"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >People</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#publications"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >Publications</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#news"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >News</a
                        >
                    </li>
                    <li>
                        <a
                            href="/blog"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >Blog</a
                        >
                    </li>
                    <li>
                        <a
                            href="/#contact"
                            class="block py-2 px-3 text-gray-700 hover:text-blue-600 transition-colors duration-300"
                            >Contact</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>
</nav>
<!-- End of page navigation -->
